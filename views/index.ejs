<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Jeopardy Search</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container">
      <h1>Search for Jeopardy clues</h1>
      <fieldset>
        <form action="/search" method="post">
          <h3>Enter start date:</h3>
          <input name="min_date" type="date" class="ghost-input" placeholder="Enter start date" value="<%= filters.min_date %>" id="min_date">
          <h3>Enter end date:</h3>
          <input name="max_date" type="date" class="ghost-input" placeholder="Enter end date" value="<%= filters.max_date %>" id="max_date">

          <h3>Enter category:</h3>
          <select name="category" id="category">
            <option value=""></option>
            <% for(var i = 0; i < categories.length; i++) { %>
              <% if (categories[i].id == filters.category) { %>
                <option value="<%= categories[i].id %>" selected><%= categories[i].title %></option>
              <% } else { %>
                <option value="<%= categories[i].id %>"><%= categories[i].title %></option>
              <% } %>
            <% } %>
          </select>

          <h3>Enter value:</h3>
          <input name="value" type="number" class="ghost-input" placeholder="Enter clue value" value="<%= filters.value %>" id="value">

          <button class="clear-filter" onclick="clearFilters()">Clear filters</button>
          <input type="submit" class="ghost-button" value="Get clues">
        </form>
        <% if (clues !== null){ %>
          <table>
            <th>Question</th>
            <th>Answer</th>
            <th>Airdate</th>
            <th>Category Name</th>
            <th>Value</th>
          <% for (var i =  0; i < clues.length; i++) { %>
             <tr>
               <td><%= clues[i].question %></td>
               <td><%= clues[i].answer %></td>
               <td><%= clues[i].airdate %></td>
               <td><%= clues[i].category.title %></td>
               <td><%= clues[i].value %></td>
             </tr>
          <% } %>
          </table>
        <% } %>
        <% if (error !== null){ %>
          <p class="error"><%= error %></p>
        <% } %>
      </fieldset>
    </div>

    <script>
    function clearFilters() {
      document.getElementById("min_date").value = "";
      document.getElementById("max_date").value = "";
      document.getElementById("category").value = "";
      document.getElementById("value").value = "";
    }
    </script>
  </body>
</html>
